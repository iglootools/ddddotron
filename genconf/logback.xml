<?xml version="1.0" encoding="UTF-8"?>
<!--
    This file is automatically generated. DO NOT edit it directly.
    Instead, make your changes in /genconf/logback.xml and run gc -v from the project directory
    -->
<configuration
        debug="${truefalse(dev_mode)}"
        scan="${truefalse(dev_mode)}"
        scanPeriod="${either(dev_mode,'5','60')} seconds"
        py:with="loglevel=either(dev_mode, 'INFO','INFO')"
        xmlns:py="http://genshi.edgewall.org/" >
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
        </encoder>
    </appender>

    <root level="${loglevel}">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Iglootools: Commons, OpenPlaceSearch, .. -->
    <logger name="org.iglootools.commons" level="${loglevel}" />
    <logger name="org.iglootools.ddddotron" level="${loglevel}" />

</configuration>
